<p id="notice"><%= notice %></p>

<h1>Listing Plants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Growth time</th>
      <th>Energetic value</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.growth_time %></td>
        <td><%= plant.energetic_value %></td>
        <td><%= plant.price %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

